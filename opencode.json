{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project-from-cwd"
      ],
      "environment": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    "context7": {
      "type": "local",
      "enabled": false,
      "command": ["pnpm", "dlx", "@upstash/context7-mcp"],
      "environment": {
        "CONTEXT7_API_KEY": "set-in-user-scope"
      }
    }
  }
}
